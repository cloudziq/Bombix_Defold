
function init(self)
	msg.post(".", "disable")
	timer.delay(1.1, false, function() msg.post(".", "enable") end)
end




function on_message(self, message_id, message, sender)
	if message_id == hash("reveal digit") then
		local pos = go.get_position()
		pos.z = 1
		go.set_position(pos)

	elseif message_id == hash("delete") then
		go.delete()
	end
end
